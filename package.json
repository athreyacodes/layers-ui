{
  "name": "layers-ui",
  "version": "0.1.0",
  "description": "A lightweight utility-first CSS library with theming support",
  "main": "dist/layers.css",
  "style": "dist/layers.css",
  "exports": {
    "./css": "./dist/layers.css",
    "./css-min": "./dist/layers.min.css"
  },
   "files": [
    "dist"
  ],
  "scripts": {
    "build:scss": "sass src/index.scss dist/layers.css",
    "build:scss:min": "sass src/index.scss dist/layers.min.css --style=compressed",
    "build:css": "postcss dist/layers.css -o dist/layers.css",
    "build:css:min": "postcss dist/layers.min.css -o dist/layers.min.css",
    "copy:docs": "cp dist/layers.css docs/layers.css && cp dist/layers.min.css docs/layers.min.css && cp dist/layers.css.map docs/layers.css.map && cp dist/layers.min.css.map docs/layers.min.css.map",
    "build": "npm run build:scss && npm run build:scss:min && npm run build:css && npm run build:css:min && npm run copy:docs",
    "watch": "sass --watch src/index.scss dist/layers.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/athreyacodes/layers-ui.git"
  },
  "keywords": [
    "css",
    "utilities",
    "ui",
    "framework",
    "layers-ui"
  ],
  "author": "Athreya M R",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/athreyacodes/layers-ui/issues"
  },
  "homepage": "https://github.com/athreyacodes/layers-ui#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sass": "^1.92.1"
  }
}
